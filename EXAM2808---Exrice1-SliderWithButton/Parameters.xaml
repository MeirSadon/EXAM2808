<Window x:Class="EXAM2808___Exrice1___SliderWithButton.Parameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EXAM2808___Exrice1___SliderWithButton"
        mc:Ignorable="d"
        Title="Parameters" Height="300" Width="300">
    <Window.Resources>
        <local:ViewModel x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Label Content="Width:" HorizontalAlignment="Left" Margin="79,78,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding SliderWidth}" HorizontalAlignment="Left" Margin="160,78,0,0" VerticalAlignment="Top"/>
        <Label Content="Height:" HorizontalAlignment="Left" Margin="79,132,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding SliderHeight}" HorizontalAlignment="Left" Margin="160,132,0,0" VerticalAlignment="Top"/>
        <Label Content="Text:" HorizontalAlignment="Left" Margin="79,180,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding MyText}" HorizontalAlignment="Left" Margin="160,187,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
